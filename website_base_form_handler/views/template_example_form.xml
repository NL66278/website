<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template
        id="template_example_form"
        name="Template to demstrate simple form handling"
        >
        <t t-call="website.layout">
            <form
                class="s_website_form form-horizontal container mt32"
                enctype="multipart/form-data"
                role="form"
                method="post"
                action="/example_form"
                >
                <div id="div_page_title">
                    <h1>Test simple form</h1>
                </div>
                <input
                    type="hidden"
                    name="csrf_token"
                    t-att-value="request.csrf_token()"
                    />
                <h3>Welkom <t t-esc="display_name" /></h3>
                <input type="hidden" name="token" t-att-value="token"/>
                <div id="test_number" class="col-md-12 form-group">
                    <label
                        for="test_number"
                        class="control-label"
                        >Enter a number between 1 and 10</label>
                    <input
                        id="test_number"
                        name="test_number"
                        type="text"
                        class="form-control"
                        t-att-value="test_number"
                        />
                </div>
                <div id="div_submit_button">
                    <button
                     type="submit"
                     class="btn btn-primary pull-left">
                     volgende <span class="fa fa-chevron-right"/>
                    </button>
                </div>
            </form>
            <!--we don't send errors in form -->
            <p class="alert alert-danger" t-if="error">
                <t t-esc="error"/>
            </p>
        </t>
    </template>

</odoo>
